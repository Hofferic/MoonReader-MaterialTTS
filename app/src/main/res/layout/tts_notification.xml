<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="6.0dip"
    android:layout_marginRight="6.0dip">
    <!--android:background="#ee222222"-->

    <!--<TextView
        android:id="@+id/tts_lay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="4.0dip"
        android:text="TTS"
        android:textSize="16.0sp"
        android:background="@drawable/my_list_selector" />-->
    <ImageView
        android:src="@drawable/ic_text_to_speech_grey600_48dp"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tts_page_up"
            android:layout_width="44.0dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:padding="2.0dip"
            android:scaleType="center"
            android:src="@drawable/ic_chevron_double_left_grey600_24dp" />

        <ImageView
            android:id="@+id/tts_prior"
            android:layout_width="44.0dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:padding="2.0dip"
            android:scaleType="center"
            android:src="@drawable/ic_chevron_left_grey600_36dp" />

        <ImageView
            android:id="@+id/tts_play"
            android:layout_width="44.0dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:padding="2.0dip"
            android:scaleType="center"
            android:src="@drawable/ic_play_pause_grey600_36dp" />

        <ImageView
            android:id="@+id/tts_next"
            android:layout_width="44.0dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:padding="2.0dip"
            android:scaleType="center"
            android:src="@drawable/ic_chevron_right_grey600_36dp" />

        <ImageView
            android:id="@+id/tts_page_down"
            android:layout_width="44.0dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:padding="2.0dip"
            android:scaleType="center"
            android:src="@drawable/ic_chevron_double_right_grey600_24dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tts_stop"
        android:layout_width="44.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:layout_marginRight="2.0dip"
        android:clickable="true"
        android:padding="8.0dip"
        android:scaleType="fitCenter"
        android:src="@drawable/dialog_close" />
</FrameLayout>