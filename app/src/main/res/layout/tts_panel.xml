<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ff333333"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingBottom="1dp">
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ff555555" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginLeft="6.0dip"
        android:layout_marginRight="6.0dip"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@id/tts_stop"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="2.0dip"
            android:scaleType="center"
            android:src="@drawable/ic_stop_grey600_36dp" />

        <FrameLayout
            android:id="@+id/FrameLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <LinearLayout
                android:id="@id/linearLayout5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/tts_page_up"
                    android:layout_width="44.0dip"
                    android:layout_height="fill_parent"
                    android:clickable="true"
                    android:padding="2.0dip"
                    android:scaleType="center"
                    android:src="@drawable/ic_chevron_double_left_grey600_24dp" />

                <ImageView
                    android:id="@id/tts_prior"
                    android:layout_width="44.0dip"
                    android:layout_height="fill_parent"
                    android:clickable="true"
                    android:padding="2.0dip"
                    android:scaleType="center"
                    android:src="@drawable/ic_chevron_left_grey600_36dp" />

                <ImageView
                    android:id="@+id/tts_play"
                    android:layout_width="44.0dip"
                    android:layout_height="fill_parent"
                    android:clickable="true"
                    android:padding="2.0dip"
                    android:scaleType="center"
                    android:src="@drawable/ic_play_pause_grey600_36dp" />

                <ImageView
                    android:id="@id/tts_next"
                    android:layout_width="44.0dip"
                    android:layout_height="fill_parent"
                    android:clickable="true"
                    android:padding="2.0dip"
                    android:scaleType="center"
                    android:src="@drawable/ic_chevron_right_grey600_36dp" />

                <ImageView
                    android:id="@id/tts_page_down"
                    android:layout_width="44.0dip"
                    android:layout_height="fill_parent"
                    android:clickable="true"
                    android:padding="2.0dip"
                    android:scaleType="center"
                    android:src="@drawable/ic_chevron_double_right_grey600_24dp" />
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/tts_options"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="9.0dip"
            android:src="@drawable/ic_settings_grey600_36dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="2dp"
        android:background="#ff555555"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5.0">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="9.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:paddingBottom="2.0dip"
                    android:paddingLeft="9.0dip"
                    android:paddingTop="8.0dip"
                    android:singleLine="true"
                    android:text="Speed"
                    android:textColor="#b3ffffff"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/resetTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2.0dip"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingTop="8.0dip"
                    android:singleLine="true"
                    android:text="Reset"
                    android:textColor="#ff1565c0"
                    android:textSize="12.0sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/tts_speed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:max="40"
                android:progress="10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2.0dip"
                android:paddingLeft="9.0dip"
                android:paddingTop="8.0dip"
                android:text="Volume"
                android:textColor="#b3ffffff"
                android:textSize="12.0sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/tts_volume"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:max="15"
                android:progress="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2.0dip"
                android:paddingLeft="9.0dip"
                android:paddingTop="8.0dip"
                android:text="Pitch"
                android:textColor="#b3ffffff"
                android:textSize="12.0sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/tts_pitch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:max="20"
                android:progress="10" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>